@model List<SecurityDemo.ViewModels.PlayerListViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Players</h2>
<a asp-controller="Player" asp-action="New">Create new</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Namn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Player" asp-action="Edit" asp-route-id="@p.Id">
                        @p.Name
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
